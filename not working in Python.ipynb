import random 
import string 

def get_valid_int(prompt):
    while True:
        try:
            return int(input(prompt))
        except ValueError:
            print("ERROR: Invalid input. Please enter a whole number.")
    
LOWERCASE_CHARS = string.ascii_lowercase
UPPERCASE_CHARS = string.ascii_uppercase
DIGITS = string.digits
SYMBOLS = string.punctuation


letters= LOWERCASE_CHARS + UPPERCASE_CHARS
numbers=DIGITS 
symbols=  SYMBOLS 

print("WELCOME TO PASSWORD GENERATOR ")

num_of_letters=get_valid_int(input("HOW MANY LETTER YOU WANT IN YOUR PASSWORD  ?? \n"))
num_of_numbers=get_valid_int(input("HOW MANY NUMBERS YOU WANT IN YOUR PASSWORD ?? \n"))
num_of_symbols=get_valid_int(input("HOW MANY SYMBOLS YOU WANT IN YOUR PASSWORD ?? \n"))

password_list = []
for i in range(1,num_of_letters+1):
    char=random.choice(letters)
    password_list += char  

for i in range(1,num_of_numbers+1):
    char=random.choice(numbers)
    password_list += char  

for i in range(1,num_of_symbols+1):
    char = random.choice(symbols)
    password_list += char

print(password_list)            #BEFORE SHUFFLE THE PASSWORD IS 
random.shuffle(password_list)
print(password_list)            #AFTER SHUFFLE THE PASSWORD IS 

password = ""
for char in password_list:
    password += char

print(password)   
